<div class="container">
  <Header>
    <h2>Docs for ember-ux components</h2>
  </Header>
  <TabControl
    class="component-navigator"
    @side="left"
    @direction="direct"
    @scrollable={{false}} as |Menu|>
    <Menu.Tab @header="TabControl">
      <Examples::TabControl 
        @onSizeChanged={{this.onSizeChanged}}
        @axis={{this.axis}}
        @sizes={{this.sizes}}
        @minSize={{this.minSize}} 
        @barSize={{this.barSize}} 
        @fluent={{this.fluent}} 
        @responsive={{this.responsive}}
      />
    </Menu.Tab>
    <Menu.Tab @header="ScrollPort">
      <Examples::ScrollPort 
        @onSizeChanged={{this.onSizeChanged}}
        @axis={{this.axis}}
        @sizes={{this.sizes}}
        @minSize={{this.minSize}} 
        @barSize={{this.barSize}} 
        @fluent={{this.fluent}} 
        @responsive={{this.responsive}}
      />
    </Menu.Tab>
    <Menu.Tab @header="SplitView">
      <Examples::SplitView 
        @onSizeChanged={{this.onSizeChanged}}
        @axis={{this.axis}}
        @sizes={{this.sizes}}
        @minSize={{this.minSize}} 
        @barSize={{this.barSize}} 
        @fluent={{this.fluent}} 
        @responsive={{this.responsive}}
      />
    </Menu.Tab>
    <Menu.Tab @header="Table">
      <Examples::DataTable 
        @onSizeChanged={{this.onSizeChanged}}
        @axis={{this.axis}}
        @sizes={{this.sizes}}
        @minSize={{this.minSize}} 
        @barSize={{this.barSize}} 
        @fluent={{this.fluent}} 
        @responsive={{this.responsive}}
      />
    </Menu.Tab>
  </TabControl>
</div>