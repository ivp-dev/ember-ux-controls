<div class="example__tree-view">
  <SplitView::Light
    @axis={{@axis}}
    @sizes={{@sizes}}
    @minPaneSize={{@minPaneSize}} 
    @barSize={{@barSize}} 
    @fluent={{@fluent}} 
    @responsive={{@responsive}}
    @onSizeChanged={{@onSizeChanged}}
    as |Splitter|
  >
    <Splitter.Pane> 
      <div class="example__properties">
        <div class="grid">
          <div class="grid__row">
            <div class="grid__cell">
              <span class="property">@multipleSelectionEnable</span>
            </div>
            <div class="grid__cell">
              <Input @type="checkbox" @checked={{this.multipleSelectionEnable}}/>
            </div>
          </div>
        </div>
      </div>
    </Splitter.Pane>
    <Splitter.Pane>
      <ComponentObserver>
        <TreeView 
          @multipleSelectionEnable={{this.multipleSelectionEnable}} 
          as |Tree|  
        >
          <Tree.Item @header="Level 1" 
            as |SubTree|
          >
            <SubTree.Item 
              @header="Level 1.1" 
              as |SubSubTree|
            >
              <SubSubTree.Item @header="Level 1.1.1"/>
              <SubSubTree.Item @header="Level 1.1.2" as |SubSubSubTree|>
                <SubSubSubTree.Item @header="Level 1.1.1.1"/>
              </SubSubTree.Item>
            </SubTree.Item>
            <SubTree.Item @header="Level 1.2"/>
            <SubTree.Item @header="Level 1.3"/>
            <SubTree.Item @header="Level 1.4"/>
          </Tree.Item>
          <Tree.Item @header="Level 2"/>
        </TreeView>
        
        <br/>
        
        <TreeView 
          @itemsSource={{@tree}} 
          @multipleSelectionEnable={{this.multipleSelectionEnable}} 
        />
        
      </ComponentObserver>
    </Splitter.Pane>
  </SplitView::Light>
</div>