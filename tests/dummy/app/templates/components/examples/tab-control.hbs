<div class="example__tab-control">
  <SplitView::Light
    @axis={{@axis}}
    @sizes={{@sizes}}
    @minSize={{@minSize}} 
    @onSizeChanged={{@onSizeChanged}}
    @barSize={{@barSize}} 
    @fluent={{@fluent}} 
    @responsive={{@responsive}}
    as |Splitter|
