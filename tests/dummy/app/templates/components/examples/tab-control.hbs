      <div class="example__properties">
        <div class="grid">
          <div class="grid__row">
            <div class="grid__cell">
              <span class="property">@side</span>
            </div>
            <div class="grid__cell" >
              <select {{on "change" (fn this.onSideChanged)}}>
                <option value="top">top</option>
                <option value="left">left</option>
                <option value="right">right</option>
                <option value="bottom">bottom</option>
              </select>
            </div>
          </div>
          <div class="grid__row">
            <div class="grid__cell">
              <span class="property">@scrollable</span>
            </div>
            <div class="grid__cell">
              <Input @type="checkbox" @checked={{this.scrollable}}/>
            </div>
          </div>
          <div class="grid__row">
            <div class="grid__cell">
              <span class="property">@direction</span>
            </div>
            <div class="grid__cell">
              <select {{on "change" (fn this.onDirectionChanged)}}>
                <option value="forward">forward</option>
                <option value="backward">backward</option>
              </select>
            </div>
          </div>
           <div class="grid__row">
            <div class="grid__cell">
              <span class="property">@itemsSource</span>
            </div>
            <div class="grid__cell">
              <Input @type="checkbox" @checked={{this.itemsSourceEnable}}/>
            </div>
          </div>
        </div>
      </div>
    </Splitter.Pane>
    <Splitter.Pane>
      <ComponentObserver
        @side={{this.side}}
        @direction={{this.direction}}
        @selectFirst={{this.selectFirst}}
        @scrollable={{this.scrollable}}
