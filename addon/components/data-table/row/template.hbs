<div
  class="{{bem (bem "data-table") "row" (hash $selected=this.isSelected)}}"
  {{did-insert this.didInsert}}
  ...attributes
>
  {{#let (hash Cell=(component this.cellTemplateName)) as |Row|}}
    {{#each this.columns as |column index|}}
      <Row.Cell 
        @width={{get this.columnSizes index}}
      > 
        {{get this.container.item column.path}}
      </Row.Cell>
    {{/each}}
  {{/let}}
</div>