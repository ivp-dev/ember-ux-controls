{{#if this.hasItemsSource}}
  {{#each this.children as |pane|}}
    <SplitView::Pane 
      @pane={{pane}}
      @axis={{this.axis}}
      @barSize={{this.barSize}}
      @addChild={{this.addChild}}
      @removeChild={{this.removeChild}}
      @lastItem={{this.view.lastObject}}
      @hasItemsSource={{this.hasItemsSource}}
    />
  {{/each}}
{{else}}
  {{yield}}
{{/if}}