<div 
  id="{{this.elementId}}" 
  class="{{bem (bem "split-view") "pane" (concat "$" this.axis) (hash $fixed=this.isFixed)}}"
  {{did-insert this.didInsert}} 
>
  {{#if this.hasItemsSource}}
    {{this.content}}
  {{else}}
    {{yield}}
  {{/if}}
</div>

{{#let (or (not this.lastItem) (eq this this.lastItem)) as |isLast|}}
  {{#unless isLast}}
    <SplitView::Bar
      @axis={{this.axis}} 
      @barSize={{this.barSize}}
    />
  {{/unless}}
{{/let}}