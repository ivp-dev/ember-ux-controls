<div 
  class={{this.classNames}}
  {{did-update 
    this.didUpdateAttrs 
    @fluent 
    @responsive
    @barSize
    @minPaneSize
  }}
  {{split-view-modifier
    host=this
    axis=this.axis
    classNamesBuilder=this.classNamesBuilder
    minPaneSizes=@minPaneSizes
    sizes=@sizes
    barSize=@barSize
    fluent=@fluent
    responsive=@responsive
    onSizeChanged=@onSizeChanged
  }}
  ...attributes
  >
  {{yield (hash Pane=(
    component "split-view/pane"
    content=@content
    classNamesBuilder=this.classNamesBuilder))
  }}
</div>